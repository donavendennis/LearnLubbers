@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form id="profile-form" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <!-- Include the profile picture upload input and preview here -->
                <div class="mb-3">
                    <label class="form-label">@(Model.Input.ProfilePictureUrl != null ? "Replace " : "")Profile Picture</label>
                    <input class="form-control" type="file" name="ProfilePictureFile" id="uploadBox">
                    <span asp-validation-for="Input.ProfilePictureUrl" class="text-danger"></span>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                    <label asp-for="Username" class="form-label"></label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.FirstName" class="form-control" placeholder="First Name" />
                    <label asp-for="Input.FirstName" class="form-label"></label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.LastName" class="form-control" placeholder="Last Name" />
                    <label asp-for="Input.LastName" class="form-label"></label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.DateOfBirth" class="form-control" placeholder="Date of Birth" type="date" />
                    <label asp-for="Input.DateOfBirth" class="form-label"></label>
                    <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Location.Street1" class="form-control" placeholder="Street 1" />
                    <label asp-for="Input.Location.Street1" class="form-label"></label>
                    <span asp-validation-for="Input.Location.Street1" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Location.Street2" class="form-control" placeholder="Street 2" />
                    <label asp-for="Input.Location.Street2" class="form-label"></label>
                    <span asp-validation-for="Input.Location.Street2" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Location.City" class="form-control" placeholder="City" />
                    <label asp-for="Input.Location.City" class="form-label"></label>
                    <span asp-validation-for="Input.Location.City" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Location.State" class="form-control" placeholder="State" />
                    <label asp-for="Input.Location.State" class="form-label"></label>
                    <span asp-validation-for="Input.Location.State" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Location.PostalCode" class="form-control" placeholder="Postal Code" />
                    <label asp-for="Input.Location.PostalCode" class="form-label"></label>
                    <span asp-validation-for="Input.Location.PostalCode" class="text-danger"></span>
                </div>
                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
            </form>
        </div>
        <div class="d-flex justify-content-end col-md-4">
            @if (Model.Input.ProfilePictureUrl != null)
            {
                <div class="col-4">
                    <div class="mt-1 form-text">Profile Picture</div>
                    <img src="@Url.Content(Model.Input.ProfilePictureUrl)" class="img-fluid rounded-circle img-thumbnail" />
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
 